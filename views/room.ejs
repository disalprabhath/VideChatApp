<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VideoChatApp</title>
    <link rel="stylesheet" href="style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
      //Close button
      function windows_close_onlick(){
        if(confirm("Do you want to exit?")){
          window.close();
        }
      }
      //about button
      function about() {
      var myWindow = window.open("https://drive.google.com/file/d/1p_l2L1LjQBoLjyrefWbhwaToB_cis5yB/view?usp=sharing");
      
      }
    </script>
  </head>
  <body>
    <div class="header">
      <div class="logo">
        <div class="header__back">
          <i class="fas fa-angle-left"></i>
        </div>
        <h2>Video Chat App</h2>
          <h3>Group 10</h3>
      </div>
    </div> 
    <hr> 
    <div class="main">  
    <div class="main__left">
      <div class="videos__group">
        <div id="video-grid">
        </div>
      </div>
      <hr>
      <div class="options">
        <div class="options__left">
          <div id="stopVideo" class="options__button">
            <i class="fa fa-video-camera"></i>
          </div>
          <div id="muteButton" class="options__button">
            <i class="fa fa-microphone"></i>
          </div>
           <div >
            <button id="start" class="options__button" style="color: red;" ><i class="fas fa-record-vinyl"></i></button>
          </div>
          <div>
            <button id="stop" disabled class="options__button"><i class="fas fa-stop"></i></button>
          </div>
          <div id="showChat" class="options__button">
            <i class="fa fa-comment"></i>
          </div>
        </div>
        <div class="options__right">
          <div id="inviteButton" class="options__button">
            <i class="fas fa-user-plus"></i>
          </div>
        </div>
        <div class="options__button">
            <a href="#" onclick="windows_close_onlick(); return false;">
              <div id="exitButton">
                <i class="fas fa-sign-out-alt"></i>
              </div>
            </a>
        </div>
        <div class="options__button">
          <a onclick="about(); return false;">
            <div id="aboutButton">
              <i class="fa fa-info-circle" aria-hidden="true"></i>
            </div>
          </a>
        </div>
      </div>
    </div>
    <hr>
    <div class="main__right">
      <div class="main__chat_window">
        <div class="header">
            <div class="header__chat" style="border: 1vh;">
              <i class="fas fa-angle-left"></i>
            </div>
            <h2>Chat Box</h2>
        </div> 
          <div class="messages">
          </div>
      </div>
      <div class="main__message_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
        <div id="send" class="options__button">
          <i class="fa fa-send" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </div>
  </body>
  <script src="script.js"></script>
  <script src="record.js"></script>
</html>